<h1>Reservation Request for <%= @restaurant.name %></h1>
<%= form_for [@restaurant, @reservation] do |f| %>
	<%= render 'shared/errors', object: @reservation %>
	
	<%= f.label :party_size %>
	<%= f.number_field :party_size, value: 2 %>

	<%= f.label :date %>
	<%= f.date_field :date %></br>

	<%= f.label :time %>
	<%= f.time_field :time %></br>

	<%= f.submit class: "btn btn-large btn-success" %>
<% end %>